{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "noEmitOnError": true,
        "typeRoots": [ "node_modules/@types" ],
        "baseUrl": ".",
        "paths": {
            "@mail/extension/*": ["../../apps/extension/src/*"],
            "@mail/db/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
